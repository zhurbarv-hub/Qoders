TELEGRAM_BOT_TOKEN=8011517942:AAHWdN8_ZHCUwQI8TbiteeGfwPfDMMieJ5M

# Telegram ID администратора (получите через @userinfobot)
TELEGRAM_ADMIN_IDS=1329276055,556319278

# ============================================
# Notification Settings
# ============================================
# Время ежедневной проверки сроков (формат HH:MM)
NOTIFICATION_CHECK_TIME=09:00

# Часовой пояс для планировщика
NOTIFICATION_TIMEZONE=Europe/Moscow

# За сколько дней до истечения отправлять уведомления (через запятую)
NOTIFICATION_DAYS=14,7,3

# Количество попыток повтора при ошибке отправки
NOTIFICATION_RETRY_ATTEMPTS=3

# Задержка между попытками (секунды)
NOTIFICATION_RETRY_DELAY=300
# ============================================
# Notification Settings
# ============================================
# Время ежедневной проверки сроков (формат HH:MM)
NOTIFICATION_TIME=02:00

# За сколько дней до истечения отправлять уведомления
ALERT_THRESHOLD_DAYS=14

# ============================================
# API Server Configuration
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=INFO
LOG_FILE=logs/application.log

# ============================================
# CORS Settings (для frontend)
# ============================================
# Разделяйте несколько источников запятой
CORS_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# ============================================
# Web API Integration for Bot
# ============================================
# URL Web API для подключения бота
WEB_API_BASE_URL=http://localhost:8000

# Таймаут запросов к API (секунды)
WEB_API_TIMEOUT=30

# Учётные данные бота для аутентификации в Web API
BOT_API_USERNAME=admin
BOT_API_PASSWORD=admin

# Интервал обновления JWT токена (секунды, по умолчанию 1 час)
BOT_TOKEN_REFRESH_INTERVAL=3600

# ============================================
# SMTP Configuration for Email Invitations
# ============================================
# SMTP сервер (например, smtp.gmail.com, smtp.yandex.ru)
SMTP_HOST=smtp.gmail.com

# Порт SMTP (обычно 587 для TLS)
SMTP_PORT=587

# Email отправителя
SMTP_USER=noreply@company.com

# Пароль или App Password (для Gmail используйте App Password)
SMTP_PASSWORD=your_app_password_here

# Имя отправителя
SMTP_FROM_NAME=KKT System

# Email адрес отправителя (может отличаться от SMTP_USER)
SMTP_FROM_EMAIL=noreply@company.com

# Использовать TLS шифрование
SMTP_USE_TLS=true

# Базовый URL веб-интерфейса (для ссылок активации)
WEB_BASE_URL=http://localhost:8000
