# ============================================
# Database Configuration
# ============================================
DATABASE_PATH=database/kkt_services.db

# ============================================
# JWT Authentication
# ============================================
# ВАЖНО: Сгенерируйте свой секретный ключ!
# Используйте: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=CHANGE_THIS_TO_RANDOM_SECRET_KEY_MIN_32_CHARACTERS
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ============================================
# Telegram Bot Configuration
# ============================================
# Получите токен у @BotFather в Telegram
TELEGRAM_BOT_TOKEN=YOUR_BOT_TOKEN_FROM_BOTFATHER

# ============================================
# Notification Settings
# ============================================
# Время ежедневной проверки сроков (формат HH:MM)
NOTIFICATION_TIME=02:00

# За сколько дней до истечения отправлять уведомления
ALERT_THRESHOLD_DAYS=14

# ============================================
# API Server Configuration
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=INFO
LOG_FILE=logs/application.log

# ============================================
# CORS Settings (для frontend)
# ============================================
# Разделяйте несколько источников запятой
CORS_ORIGINS=http://localhost:8000,http://127.0.0.1:8000
